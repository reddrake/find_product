{
  "name": "Find Product",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Find you like product from alibaba and aliexpress and etc. Then import the products to opencart web site.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "tabs",
    "webRequestBlocking",
    "alarms",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "scripts": [
      "library/lodash.min.js",
      "model/products.js",
      "static/background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "static/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.alibaba.com/*"
      ],
      "js": [
        "library/jquery.min.js",
        "vendor/alert.js",
        "static/content_script.js"
    ],
    "css": [
      "vendor/alert.css",
      "static/content_script.css"
    ],
      "run_at" : "document_end",
      "all_frames": false
    }
  ]
}