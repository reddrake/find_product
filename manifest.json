{
	"name": "Find Product",
	"version": "1.0",
	"description": "find alibaba and aliexpress product and insert to opencart",
	"permissions": [
    "declarativeContent",
		"activeTab",
    "storage",
    "tabs",
    "webRequestBlocking",
    "alarms",
    "contextMenus",
    "notifications"
	],
	"background": {
		"scripts": ["static/background.js"],
		"persistent": false
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.alibaba.com/*"
      ],
      "js": [
        "static/jquery.min.js",
        "static/content_script.js"
	  ],
	  "css": [
		"static/content_script.css"
	  ],
      "run_at" : "document_end",
      "all_frames": false
    }
  ],
	"manifest_version": 2
}